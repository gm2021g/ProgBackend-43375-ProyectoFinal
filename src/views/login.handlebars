<main class="layout">
  <div class="login__container">
    <h2 class="login__title">Frangances Shop</h2>
    <p>Enter your data or <a href="/register"> Sign up here </a></p>
    <form action="/login" method="post" class="login__form">
      <input
        type="text"
        placeholder="email"
        class="login__input"
        name="email"
      />
      <input
        type="password"
        placeholder="password"
        class="login__input"
        name="password"
      />
      <div class="input__divider"></div>
      <button type="submit" class="login__btn">Sing in</button>

      <a href="/github"><button type="button" class="loginGitHub__btn">Sign up with GitHub</button></a>
    </form>
  </div>
</main>